# Synctex

set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"

# Basic Settings
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor

# Set the default zoom level (e.g., 1.2 means 120%)
set zoom-level 1.2

# Enable continuous mode (scroll between pages seamlessly)
set continuous true

# Set the default page mode (e.g., "best-fit", "fit-width", "fit-height")
set page-mode best-fit

# Enable smooth scrolling
set smooth-scroll true

# Set the default color for highlighting links
set recolor-lightcolor "#ffffff"
set recolor-darkcolor "#000000"

# Customize keybindings
map <C-n> navigate next
map <C-p> navigate previous
map <C-f> scroll down
map <C-b> scroll up

# Set the status bar visibility
set statusbar visible

# Set the visibility of the input bar
set inputbar visible

# Default document location (e.g., start in a specific directory)
set start-in "/home/user/Documents"

